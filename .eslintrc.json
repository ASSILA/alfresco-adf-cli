{
    "extends": "standard",
    "plugins": [
        "standard"
    ],
    "env": {
        "mocha": true,
        "es6": true
    },
    "rules": {
        "semi": ["error", "always"],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "space-before-function-paren": ["error", "never"]
    }
}

{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "removeComments": true,
        "declaration": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "dist",
        "types": [
            "core-js",
            "jasmine",
            "node"
        ]
    },
    "exclude": [
        "demo",
        "node_modules",
        "dist"
    ]
}
